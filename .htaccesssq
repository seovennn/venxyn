# -----------------------------------------------
# Aktifkan Rewrite Engine dan arahkan ke /public/
# -----------------------------------------------
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>

# -----------------------------------------------
# PHP Handler (cPanel Generated)
# -----------------------------------------------
# php -- BEGIN cPanel-generated handler, do not edit
<IfModule mime_module>
  AddHandler application/x-httpd-ea-php83 .php .php8 .phtml
</IfModule>
# php -- END cPanel-generated handler, do not edit

# -----------------------------------------------
# Izinkan akses ke file 403.shtml
# -----------------------------------------------
<Files 403.shtml>
    order allow,deny
    allow from all
</Files>

# -----------------------------------------------
# Blokir IP yang mencurigakan
# -----------------------------------------------
<Limit GET POST>
    order allow,deny
    allow from all
    deny from 209.97.172.189
    deny from 103.164.45.23
    deny from 103.59.160.37
    deny from 128.199.151.177
</Limit>

# -----------------------------------------------
# Redirect semua error 404 ke domain lain
ErrorDocument 404 /redirect404.php
